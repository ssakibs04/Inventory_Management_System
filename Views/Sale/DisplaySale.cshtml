@model IEnumerable<inventory_ManagementSystem.Models.Sale>

@{
    ViewBag.Title = "DisplaySale";
}

<h2>Display Sale</h2>

<p> 
    @Html.ActionLink("Create New", "SaleProduct",new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Sale Products")
        </th>
        <th>
            @Html.DisplayName("Quantity")
        </th>
        <th>
            @Html.DisplayName("Sale Date")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Sale_product)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sale_pnty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sale_date)
        </td>
        <td>
            @Html.ActionLink("Update", "UpdateSaleProduct", new { id=item.id }, new {@class="btn btn-primary"}) |
            @Html.ActionLink("Details", "DetailsSale", new { id = item.id }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Delete", "DeleteSale", new { id=item.id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
